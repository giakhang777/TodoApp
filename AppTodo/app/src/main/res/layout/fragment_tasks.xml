<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context="activity.TasksFragment">

    <!-- TextView hiển thị chữ "Search" ở trên EditText -->

    <!-- EditText cho thanh tìm kiếm với nền màu trắng và bo góc -->

    <!-- Button Cancel nằm bên phải của EditText -->

    <TextView
        android:id="@+id/textSearch"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Search"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- EditText -->

        <!-- Logo kính lúp -->

        <EditText
            android:id="@+id/editSearch"
            android:layout_width="298dp"
            android:layout_height="48dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/edit_text_background"
            android:hint="Type here..."
            android:inputType="text"
            android:paddingStart="40dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="89dp"
            android:src="@drawable/search" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@id/editSearch"
        android:background="@android:color/white"
        android:text="Cancel"
        android:textColor="@color/black" />

</FrameLayout>
