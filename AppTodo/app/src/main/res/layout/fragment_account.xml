<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ScrollView để tránh nội dung bị tràn màn hình -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"> <!-- chừa chỗ cho nút Delete -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="294dp"
                android:layout_height="122dp"
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:text="My Profile"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="148dp"
                android:layout_height="138dp"
                android:src="@drawable/hung"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp"
                tools:ignore="MissingClass" />

            <ImageButton
                android:id="@+id/btn_edit_avatar"
                android:layout_width="48dp"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/baseline_edit_24"
                android:contentDescription="Edit Avatar"
                app:tint="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/et_account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="Account Name"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_background"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/et_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_background"
                android:hint="Gender"
                android:minHeight="48dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Change Password" />

            <!-- Nút Save mới thêm -->
            <Button
                android:id="@+id/btn_save"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Save"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Logout"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </ScrollView>

    <!-- Nút xóa tài khoản cố định dưới cùng -->
    <Button
        android:id="@+id/btn_delete_account"
        android:layout_width="219dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="150dp"
        android:text="Delete Account"
        android:textColor="@android:color/black" />

</FrameLayout>
